@page
@model WebApplication2.Pages.ContactUsModel
@{
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>@ViewData["Title"]</h2>
                <ol>
                    <li><a href="index.html">Home</a></li>
                    <li>Inner Page</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Contact Us</h2>

            </div>

            <div>
                <iframe style="border:0; width: 100%; height: 270px;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" allowfullscreen></iframe>
            </div>

            <div class="row mt-5">

                <div class="col-lg-4">
                    <div class="info">
                        <div class="address">
                            <i class="bi bi-geo-alt"></i>
                            <h4>Location:</h4>
                            <p>812 D Balupura Road </p>
                            <p>Adarsh Nagar , Ajmer -305001</p>
                        </div>

                        <div class="email">
                            <i class="bi bi-envelope"></i>
                            <h4>Email:</h4>
                            <p>aowbussiness@gmail.com</p>
                        </div>

                        @*  <div class="phone">
                            <i class="bi bi-phone"></i>
                            <h4>Call:</h4>
                            <p>+1 5589 55488 55s</p>
                            </div>*@

                    </div>

                </div>

                <div class="col-lg-8 mt-5 mt-lg-0">

                    @using (Html.BeginForm())
                    {
                        <div class="row gy-2 gx-md-3">
                            <div class="col-md-6 form-group">
                                <input type="text" name="name" class="form-control" id="name" placeholder="Your Name"  asp-for="@Model.contactUsViewModel.Name">
                            </div>
                            <div class="col-md-6 form-group">
                                <input type="email" class="form-control" name="email" id="email" placeholder="Your Email"  asp-for="@Model.contactUsViewModel.Email">
                            </div>
                            <div class="form-group col-12">
                                <input type="text" class="form-control" name="subject" id="subject" placeholder="Subject"  asp-for="@Model.contactUsViewModel.Subject">
                            </div>
                            <div class="form-group col-12">
                                <textarea class="form-control" name="message" rows="5" placeholder="Message"  asp-for="@Model.contactUsViewModel.Body"></textarea>
                            </div>
                           @* <div class="form-group col-12">
                                <label>Enter Text Shown here</label><br />
                                <div id="captchaBackground">
                                    <div id="captcha">@Model.randomString</div>
                                    <div class="form-inline">
                                        <input class="form-control" id="textBox" asp-for="@Model.inputRandomString">
                                        <button id="refreshButton" type="button" class="btn btn-primary" asp-page="ContactUs" asp-page-handler="OnGetRefreshCaptcha"><i class="fas fa-sync"></i>Refresh</button>
                                        <span id="output"></span>
                                    </div>
                                </div>
                                <div class="validation"></div>
                            </div>*@
                            <div class="my-3 col-12">
                                <div class="loading">Loading</div>
                                <div class="error-message"></div>
                                <div class="sent-message">Your message has been sent. Thank you!</div>
                            </div>
                            <div class="text-center col-12">
                                <button type="submit" class="btn btn-primary">Send Message</button>
                            </div>
                        </div>
                    }

                </div>

            </div>

        </div>
    </section><!-- End Contact Section -->

</main>

